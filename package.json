{
  "name": "orb-system",
  "version": "1.0.0",
  "description": "THE 0RB SYSTEM - It's not a game. It's THE game.",
  "main": "system/core/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:usb": "node scripts/build-usb.js",
    "build:iso": "node scripts/create-iso.js",
    "web": "cd web && next dev",
    "web:build": "cd web && next build",
    "web:start": "cd web && next start",
    "boot": "node boot/init.js",
    "test": "jest",
    "lint": "eslint ."
  },
  "dependencies": {
    "electron": "^28.0.0",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "three": "^0.159.0",
    "@react-three/fiber": "^8.15.0",
    "@react-three/drei": "^9.88.0",
    "framer-motion": "^10.16.0",
    "ethers": "^6.9.0",
    "web3": "^4.3.0",
    "@solana/web3.js": "^1.87.0",
    "openai": "^4.20.0",
    "@anthropic-ai/sdk": "^0.32.0",
    "socket.io": "^4.7.0",
    "socket.io-client": "^4.7.0",
    "howler": "^2.2.4",
    "gsap": "^3.12.0",
    "zustand": "^4.4.0",
    "tailwindcss": "^3.4.0",
    "postcss": "^8.4.32",
    "autoprefixer": "^10.4.16",
    "typescript": "^5.3.0"
  },
  "devDependencies": {
    "electron-builder": "^24.9.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0"
  },
  "build": {
    "appId": "com.orb.system",
    "productName": "0RB SYSTEM",
    "directories": {
      "output": "dist"
    },
    "linux": {
      "target": ["AppImage", "deb", "rpm"]
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "mac": {
      "target": ["dmg", "zip"]
    }
  },
  "keywords": ["orb", "ai", "agents", "copa", "simulation", "gaming"],
  "author": "0RB",
  "license": "MIT"
}
